generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // conexão "pooled" (boa p/ serverless / Prisma Client)
  url       = env("PRISMA_DATABASE_URL")
  // conexão direta (sem pool) – Prisma usa p/ migrações
  directUrl = env("POSTGRES_URL")
}

model Journey {
  id        String   @id @default(cuid())
  startDate String
  totalDays Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  days      Day[]

  @@map("journeys")
}

model Day {
  id          String    @id @default(cuid())
  journeyId   String
  dayNumber   Int
  isCompleted Boolean   @default(false)
  reflection  String?
  difficulty  String? // moleza, pouco, médio, muito
  completedAt String?

  journey Journey @relation(fields: [journeyId], references: [id], onDelete: Cascade)

  @@unique([journeyId, dayNumber])
  @@map("days")
}
